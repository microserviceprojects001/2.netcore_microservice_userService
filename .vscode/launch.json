{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run User.API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "User.API", // 关键！调用 tasks.json 中的 "build" 任务
            "program": "${workspaceFolder}\\User.API\\bin\\Debug\\net9.0\\User.API.dll", // 直接指定DLL
            "args": [],
            "cwd": "${workspaceFolder}/User.API",
            "console": "integratedTerminal",
            "symbolOptions": {
                "searchPaths": [
                    "${workspaceFolder}\\User.API\\bin\\Debug\\net9.0" // 改为单层目录
                ],
                "searchMicrosoftSymbolServer": true
            },
            "logging": {
                "moduleLoad": true
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development" // 强制使用 Development 环境
            }
        },
        {
            "name": "Run User.Identity",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "User.Identity", // 关键！调用 tasks.json 中的 "build" 任务
            "program": "${workspaceFolder}\\User.Identity\\bin\\Debug\\net9.0\\User.Identity.dll", // 直接指定DLL
            "args": [],
            "cwd": "${workspaceFolder}/User.Identity",
            "console": "integratedTerminal",
            "symbolOptions": {
                "searchPaths": [
                    "${workspaceFolder}\\User.Identity\\bin\\Debug\\net9.0" // 改为单层目录
                ],
                "searchMicrosoftSymbolServer": true
            },
            "logging": {
                "moduleLoad": true
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development" // 强制使用 Development 环境
            }
        },
        {
            "name": "Debug Unit Tests",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/Tests/User.API.UnitTests/bin/Debug/net9.0/User.API.UnitTests.exe",
            "args": [
              "--filter",
              "FullyQualifiedName=User.API.UnitTests.UserControllerUnitTests.Get_ReturnRightUser_WithExpectedParameter"
            ],
            "cwd": "${workspaceFolder}/Tests/User.API.UnitTests/bin/Debug/net9.0",
            "console": "integratedTerminal",
            "justMyCode": false,
            "symbolOptions": {
              "searchPaths": [
                "${workspaceFolder}/Tests/User.API.UnitTests/bin/Debug/net9.0"
              ],
              "loadAll": true
            },
            "logging": {
              "engineLogging": true,
              "trace": true,
              "traceResponse": true
            },
            "preLaunchTask": "build-tests"
          },
          {
            "name": "Attach to Test Process",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": false,
            "symbolOptions": {
              "searchPaths": [
                "${workspaceFolder}/Tests/User.API.UnitTests/bin/Debug/net9.0"
              ],
              "loadAll": true
            },
            "logging": {
              "engineLogging": true
            }
          }
    ]
}